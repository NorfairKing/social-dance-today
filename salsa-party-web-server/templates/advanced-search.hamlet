<section .section .is-large>
  <div .container>
    <div .columns .is-centered>
      <div .column .is-8-tablet .is-7-desktop .is-6-widescreen>
        <form
          method=get
          action=@{QueryR}>
          <div .field>
            <label .label>
              _{MsgAdvancedSearchFormLocationLabel}
            <div .control>
              <div .field .has-addons>
                <p .control .is-expanded>
                  <input .input
                    id=#{queryId}
                    type=text
                    name="address"
                    placeholder="ZÃ¼rich"
                    required>
                <p .control>
                  <div .button
                    id=#{statusId}>
                    _{MsgLocateMeLocation}
            <p .help
              id=#{helpId}>
              _{MsgLocateMeHelpBefore}

          <input #latitudeInput type=hidden name="latitude">
          <input #longitudeInput type=hidden name="longitude">

          <div .field>
            <label .label>
              _{MsgAdvancedSearchFormDistanceLabel}
            <div .control>
              <div .field .has-addons>
                <p .control .is-expanded>
                  <input .input
                    #max-distance
                    name="distance"
                    type="number"
                    min=#{minDistance}
                    max=#{maxDistance}
                    value=#{defaultDistance}
                    step=#{stepDistance}>
                <p .control>
                  <div .button .is-disabled #max-distance-value>
                    km


          <div .field>
            <div .control>
              <button #submit .button .is-dark type="submit">
                _{MsgAdvancedSearchFormSearch}

