<h1>
  Submit Party

<form
  method=post
  action=@{SubmitPartyR}>

  <label>
    Title
  <input
    type=text
    name="title"
    required>

  <label>
    Description
  <textarea
    name="description">

  <label>
    Day
  <input
    type=date
    name="day"
    required>

  <label>
    Start
  <input
    type=time
    name="start">

  ^{token}

  <button type="submit">
    Submit
